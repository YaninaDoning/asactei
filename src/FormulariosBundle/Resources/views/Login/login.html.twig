{% extends 'base.html.twig' %}

{% block cuerpo %}

	{% if error %}
		<br><font color="red"><div>{{ error.message }}</div></front>
	{% endif %} 

	<div class="row form">
	    <h3>Ingreso de Usuarios Registrados:</h3>

	    <form action="{{ path('login_check') }}" method="post">
		<div class="row">
		    <div class="fourcol">
		        <label for="username">Email:</label>
		        <input class="input" type="text" id="username" name="_username" value="" required="required" value={{last_username}}/>

		        <label for="password">Contraseña:</label>
		        <input class="input" type="password" id="password" name="_password" required="required" />                
		        <div class="row"> 
			     <input type="hidden" name="_target_path" value="/tramite" />                   
		            <button type="submit">Entrar</button>
		        </div>
		    </div>
		    <div class="row"><br>
		        <div class="ui-widget">
		            <div class="ui-state-highlight ui-corner-all"
		                 style="margin: 5px; padding: 10px;">
		                <p>
		                    <span class="ui-icon ui-icon-info" style="float: left; margin-right: .3em;"></span> 
		                    <strong>Ayuda:</strong>
		                    Si Ud. no posee Usuario, regístrese en el siguiente   
		                    <a href="{{ path('nuevoUsuario') }}" style="color:red!important"> Enlace </a> <br/>
		                    <span class="ui-icon ui-icon-info" style="float: left; margin-right: .3em;"></span> 
		                    <strong>Ayuda:</strong>
		                    En caso de haber olvidado su contraseña siga el siguiente <a href="" style="color:red!important"> Enlace </a>.
		                </p>
		            </div>
		        </div>
		    </div>
		</div>
	    </form>
	</div>

{% endblock %}

